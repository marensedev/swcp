{
  "include": ["src/**/*"],
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",  
    "rootDir": "src",       
    "esModuleInterop": true,                        
    "forceConsistentCasingInFileNames": true,        
    "strict": true,               
    "skipLibCheck": true,
    "outDir": "dist"
  }
}
